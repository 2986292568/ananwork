<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back_main">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="500px"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="550px"
                android:layout_height="80px"
                android:layout_gravity="center"
                android:background="@drawable/corner_lan"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40px"
                    android:background="@mipmap/me" />

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25px"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="25px"

                    android:background="@color/texthind" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="40px"
                    android:layout_marginLeft="20px"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="请输入手机号"
                    android:textColor="@color/white"
                    android:textColorHint="@color/whitesmoke"
                    android:textSize="28px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="550px"
                android:layout_height="80px"
                android:layout_gravity="center"
                android:layout_marginTop="32px"
                android:background="@drawable/corner_lan"
                android:gravity="center"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40px"
                    android:background="@mipmap/mima" />

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25px"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="25px"
                    android:background="@color/texthind" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="40px"
                    android:layout_marginLeft="20px"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:textColor="@color/white"
                    android:textColorHint="@color/whitesmoke"
                    android:textSize="28px" />
            </com.zhy.autolayout.AutoLinearLayout>
            <!-- 忘记密码开始 -->
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="550px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="32px"
                android:gravity="right">

                <TextView
                    android:id="@+id/tv_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="忘记密码"
                    android:textColor="#347AEA"
                    android:textSize="22px" />
            </com.zhy.autolayout.AutoLinearLayout>
            <!-- 忘记密码结束 -->
        </com.zhy.autolayout.AutoLinearLayout>


        <!-- 登录按钮开始 -->
        <Button
            android:id="@+id/bt_login"
            style="@style/text_login"
            android:layout_width="550px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:layout_marginTop="40px"
            android:background="@drawable/corner_with_tou"
            android:text="登录" />

        <!-- 注册按钮开始 -->
        <Button
            android:id="@+id/bt_register"
            style="@style/text_login"
            android:layout_width="550px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:layout_marginTop="32px"
            android:background="@drawable/corner_with"
            android:text="注册"
            android:textColor="@android:color/white" />
        <!-- 注册按钮结束 -->
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>