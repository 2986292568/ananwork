<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back_main">

    <include
        layout="@layout/title_includ"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginTop="50px" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="500px"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="550px"
                android:layout_height="80px"
                android:layout_gravity="center"
                android:background="@drawable/corner_lan"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40px"
                    android:background="@mipmap/me" />

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25px"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="25px"

                    android:background="@color/texthind" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="40px"
                    android:layout_marginLeft="20px"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="请输入手机号"
                    android:textColor="@color/white"
                    android:textColorHint="@color/whitesmoke"
                    android:textSize="28px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="550px"
                android:layout_height="80px"
                android:layout_gravity="center"
                android:layout_marginTop="32px"
                android:background="@drawable/corner_lan"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40px"
                    android:background="@mipmap/yanzheng" />

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25px"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="25px"
                    android:background="@color/texthind" />


                <com.zhy.autolayout.AutoFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px">

                    <EditText
                        android:id="@+id/et_code"
                        android:layout_width="match_parent"
                        android:layout_height="40px"
                        android:background="@null"
                        android:gravity="center|left"
                        android:hint="验证码"
                        android:textColor="@color/white"
                        android:textColorHint="@color/whitesmoke"
                        android:textSize="28px" />


                    <TextView
                        android:id="@+id/tv_code"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginRight="25px"
                        android:background="@drawable/corner_with"
                        android:gravity="center|right"
                        android:paddingBottom="5px"
                        android:paddingLeft="15px"
                        android:paddingRight="15px"
                        android:paddingTop="5px"
                        android:text="获取验证码"
                        android:textColor="@color/white"
                        android:textSize="18px" />

                </com.zhy.autolayout.AutoFrameLayout>

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="550px"
                android:layout_height="80px"
                android:layout_gravity="center"
                android:layout_marginTop="32px"
                android:background="@drawable/corner_lan"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40px"
                    android:background="@mipmap/mima" />


                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25px"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="25px"
                    android:background="@color/texthind" />


                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="40px"
                    android:layout_marginLeft="20px"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="新密码"
                    android:inputType="textPassword"
                    android:textColor="@color/white"
                    android:textColorHint="@color/whitesmoke"
                    android:textSize="28px" />


            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>


        <!-- 登录按钮开始 -->
        <Button
            android:id="@+id/bt_register"
            style="@style/text_login"
            android:layout_width="550px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:layout_marginTop="50px"
            android:background="@drawable/corner_with_tou"
            android:text="确定重置密码" />

    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>