<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/t160dp">
                <LinearLayout
                    android:background="@drawable/answer_detail_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/t34dp"/>
                <ImageView
                    android:layout_marginTop="@dimen/t30dp"
                    android:paddingLeft="@dimen/f10dp"
                    android:paddingRight="@dimen/f10dp"
                    android:id="@+id/iv_detail_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/common_titlebar_backjt"/>

                <RelativeLayout
                    android:layout_marginLeft="@dimen/t10dp"
                    android:layout_marginBottom="@dimen/t10dp"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/iv_answer_detail2"
                    android:layout_width="@dimen/t50dp"
                    android:layout_height="@dimen/t50dp">
                    <ImageView
                        android:id="@+id/iv_answer_detail"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/no_pic"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="@dimen/t11dp"
                        android:layout_height="@dimen/t11dp"
                        android:src="@drawable/master"/>
                </RelativeLayout>
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/tv_answer_name"
                    android:layout_alignTop="@+id/iv_answer_detail2"
                    android:layout_toRightOf="@+id/iv_answer_detail2"
                    android:layout_marginLeft="@dimen/t10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    />
                <ImageView
                    android:id="@+id/user_sex"
                    android:layout_marginLeft="@dimen/t10dp"
                    android:layout_alignTop="@+id/tv_answer_name"
                    android:layout_toRightOf="@+id/tv_answer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sex_women"/>
                <LinearLayout
                    android:layout_marginLeft="@dimen/t10dp"
                    android:layout_toRightOf="@+id/iv_answer_detail2"
                    android:layout_alignBottom="@+id/iv_answer_detail2"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/main"
                        android:id="@+id/tv_answer_focus_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="235"/>
                    <TextView
                        android:layout_marginLeft="@dimen/t5dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关注"/>
                    <TextView
                        android:layout_marginLeft="@dimen/t10dp"
                        android:textColor="@color/main"
                        android:id="@+id/tv_answer_fan_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7650"/>
                    <TextView
                        android:layout_marginLeft="@dimen/t5dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="粉丝"/>

                </LinearLayout>

            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/t10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/user_school"
                    style="@style/background_red_text_white"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京传媒大学"/>
                <TextView
                    android:id="@+id/user_major"
                    style="@style/background_red_text_white"
                    android:layout_marginLeft="@dimen/t10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考古学"/>
                <TextView
                    android:id="@+id/user_grade"
                    android:padding="@dimen/t3dp"
                    style="@style/background_red_text_white"
                    android:layout_marginLeft="@dimen/t10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大三"/>
            </LinearLayout>


            <View
                android:layout_marginTop="@dimen/t10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/t7dp"
                android:background="#d0d0d0"
                />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_answer"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/t20dp"
                    android:paddingRight="@dimen/t20dp"
                    android:paddingLeft="@dimen/t20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/main"
                        android:id="@+id/tv_answer_solve_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"/>
                    <TextView
                        android:textColor="@color/main"
                        android:id="@+id/tv_answer"
                        android:layout_marginTop="@dimen/t5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="回答"/>
                    <View
                        android:id="@+id/answer_line"
                        android:textColor="@color/main"
                        android:layout_marginTop="@dimen/t5dp"
                        android:layout_width="@dimen/t60dp"
                        android:layout_height="@dimen/t3dp"
                        android:background="@color/main"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_ask"
                    android:gravity="center"
                    android:paddingTop="@dimen/t20dp"
                    android:paddingRight="@dimen/t20dp"
                    android:paddingLeft="@dimen/t20dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/gray"
                        android:gravity="center"
                        android:id="@+id/tv_answer_ask_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"/>
                    <TextView
                        android:id="@+id/tv_ask"
                        android:textColor="@color/gray"
                        android:layout_marginTop="@dimen/t5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="提问"/>
                    <View
                        android:visibility="invisible"
                        android:id="@+id/ask_line"
                        android:layout_marginTop="@dimen/t5dp"
                        android:layout_width="@dimen/t60dp"
                        android:layout_height="@dimen/t3dp"
                        android:background="@color/gray"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_accept"
                    android:gravity="center"
                    android:paddingTop="@dimen/t20dp"
                    android:paddingRight="@dimen/t20dp"
                    android:paddingLeft="@dimen/t20dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/gray"
                        android:id="@+id/tv_answer_accept_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00%"/>
                    <TextView
                        android:textColor="@color/gray"
                        android:id="@+id/tv_accept"
                        android:layout_marginTop="@dimen/t5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="采纳率"/>
                    <View
                        android:visibility="invisible"
                        android:id="@+id/tv_accept_line"
                        android:layout_marginTop="@dimen/t5dp"
                        android:layout_width="@dimen/t60dp"
                        android:layout_height="@dimen/t2dp"
                        android:background="@color/gray"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/t1dp"
                android:background="@color/cccccccolor"
                />
            <com.lvshandian.asktoask.view.MyListview
                android:divider="#00000000"
                android:id="@+id/lv_answer_detail"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
