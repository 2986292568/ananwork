<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@color/main"
    android:gravity="center_vertical">
    <View
        android:orientation="horizontal"
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/main"
        />
<RelativeLayout
    android:gravity="center_vertical"
    android:layout_below="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/tv_titlebar_centertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
         />
    <LinearLayout
        android:id="@+id/ll_titlebar_zuojiantou"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="@dimen/f10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/common_titlebar_backjt" />
    </LinearLayout>

    <TextView
        android:gravity="center"
        android:layout_marginRight="@dimen/f10dp"
        android:id="@+id/tv_titlebar_righttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"
        />
</RelativeLayout>


</RelativeLayout>