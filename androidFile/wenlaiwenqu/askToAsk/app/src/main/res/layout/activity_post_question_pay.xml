<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorf2f2f2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/t20dp"
        android:background="@color/main"
        />
    <RelativeLayout
        android:background="@color/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back_pay"
            android:padding="@dimen/t10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/common_titlebar_backjt"/>
        <TextView
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:id="@+id/tv_hudong_detail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认支付"/>
    </RelativeLayout>


    <LinearLayout
        android:background="@color/white"
        android:paddingTop="@dimen/t18dp"
        android:paddingBottom="@dimen/t13dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/color333333"
            android:layout_marginLeft="@dimen/f9dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实际支付金额"/>
        <TextView
            android:id="@+id/tv_confirm_real"
            android:textColor="@color/main"
            android:layout_marginRight="@dimen/t10dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥4900.00"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/t5dp"
        android:background="@color/colorf2f2f2"
        />
    <TextView
        android:visibility="invisible"
        android:background="@color/white"
        android:textColor="@color/colorababab"
        android:paddingBottom="@dimen/f9dp"
        android:paddingTop="@dimen/f9dp"
       android:paddingLeft="@dimen/f9dp"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择支付方式"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/t2dp"
        android:background="@color/colordadada"
        />

    <RelativeLayout
        android:visibility="gone"
        android:background="@color/white"
        android:paddingBottom="@dimen/t18dp"
       android:paddingTop="@dimen/f10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/t10dp"
            android:id="@+id/iv_pic"
            android:layout_width="@dimen/f35dp"
            android:layout_height="@dimen/f35dp"
            android:src="@drawable/weixin"/>
        <TextView
            android:textSize="@dimen/t20sp"
            android:layout_marginTop="@dimen/f4dp"
            android:textColor="@color/color333333"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_pic"
            android:id="@+id/tv_pay_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信支付"/>
        <TextView
            android:layout_marginTop="@dimen/f9dp"
            android:textColor="@color/colorababab"
            android:layout_alignLeft="@+id/tv_pay_weixin"
            android:layout_below="@+id/tv_pay_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐安装微信5.0及以上版本的用户使用"/>
        <CheckBox
            android:button="@null"
            android:background="@drawable/ck_post_pay_bg"
            android:id="@+id/ck_weixin"
            android:layout_marginRight="@dimen/t18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="0.2dp"
    android:background="@color/colorababab"
    />
    <RelativeLayout
        android:background="@color/white"
        android:paddingBottom="@dimen/t18dp"
        android:paddingTop="@dimen/f10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_pic_zhifubao"
            android:layout_width="@dimen/f30dp"
            android:layout_height="@dimen/f30dp"
            android:src="@drawable/zhifubao"/>
        <TextView
            android:textSize="@dimen/t20sp"
            android:layout_marginTop="@dimen/f4dp"
            android:textColor="@color/color333333"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_pic_zhifubao"
            android:id="@+id/tv_pay_zhifubao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝支付"/>
        <TextView
            android:layout_marginTop="@dimen/f9dp"
            android:textColor="@color/colorababab"
            android:layout_alignLeft="@+id/tv_pay_zhifubao"
            android:layout_below="@+id/tv_pay_zhifubao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐有支付宝账户的用户"/>
        <CheckBox
            android:button="@null"
            android:background="@drawable/ck_post_pay_bg"
            android:id="@+id/ck_zhifubao"
            android:layout_marginRight="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <Button
        android:padding="@dimen/f5dp"
        android:id="@+id/btn_pay"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:background="@drawable/pay_bg"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认支付"/>

</LinearLayout>
