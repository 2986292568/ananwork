<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_leavemessage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/white"
            android:id="@+id/ll_big"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="@color/white"
                android:paddingTop="10dp"
                android:paddingBottom="@dimen/t10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/iv_hudong_type_detail"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/no_pic"/>
                <RelativeLayout
                    android:layout_marginLeft="9dp"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/iv_hudong_type_detail"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp">
                    <TextView
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:id="@+id/tv_hudong_type_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="刘诗诗"/>
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/iv_hudong_detail_sex"
                        android:layout_toRightOf="@+id/tv_hudong_type_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/sex_women"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="10dp"
                    android:id="@+id/ll_hudong_detail_lab"
                    android:layout_toRightOf="@+id/iv_hudong_type_detail"
                    android:layout_alignBottom="@+id/iv_hudong_type_detail"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_hudong_detail_label_school"
                        style="@style/background_red_text_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="清华大学"/>
                    <TextView
                        style="@style/background_red_text_white"
                        android:id="@+id/tv_hudong_detail_label_major"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工业设计"/>
                    <TextView
                        android:id="@+id/tv_hudong_detail_label_grade"
                        android:layout_marginLeft="5dp"
                        style="@style/background_red_text_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大二"/>
                </LinearLayout>
                <TextView
                    android:layout_marginRight="20dp"
                    android:id="@+id/tv_price_hudong"
                    android:textColor="@color/main"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥0.00"/>
                <RelativeLayout
                    android:layout_toLeftOf="@+id/tv_price_hudong"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/reward"
                    android:layout_width="@dimen/t16dp"
                    android:layout_height="@dimen/t16dp">
                    <TextView
                        android:textSize="@dimen/t12sp"
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="赏"
                        />
                </RelativeLayout>
                <TextView
                    android:textSize="@dimen/t16sp"
                    android:textColor="@color/colorababab"
                    android:drawablePadding="5dp"
                    android:layout_marginTop="@dimen/f23dp"
                    android:layout_alignRight="@+id/tv_price_hudong"
                    android:layout_below="@+id/tv_price_hudong"
                    android:id="@+id/tv_hudong_detail_warn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/warn"
                    android:text="举报" />
            </RelativeLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/t10dp"
                android:id="@+id/ll_hudong_detail_oncick"
                android:layout_marginTop="@dimen/t10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:textSize="@dimen/t17sp"
                    android:id="@+id/tv_title_hudong"
                    android:textColor="@color/color333333"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="问题标题"/>


                <TextView
                    android:textColor="@color/colorababab"
                    android:id="@+id/tv_time_hudong"
                    android:paddingRight="@dimen/t10dp"
                    android:gravity="center_vertical|right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-08-08"/>
            </LinearLayout>
            <TextView
                android:layout_marginLeft="@dimen/t10dp"
                android:textColor="@color/color333333"
                android:layout_marginTop="@dimen/t10dp"
                android:id="@+id/tv_hudong_detail_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="问题描述"
                />

            <com.lvshandian.asktoask.view.MyGridView
                android:id="@+id/gv_detail_hudong"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24px"
                android:layout_marginLeft="24px"
                android:layout_marginRight="24px"
                android:layout_marginTop="24px"
                android:horizontalSpacing="18px"
                android:numColumns="3"
                android:verticalSpacing="18px" />
            <RelativeLayout
                android:gravity="center_vertical"
                android:padding="@dimen/f10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/ck_hudong_collect_num"
                        android:button="@null"
                        android:background="@drawable/collect_bg"
                        android:layout_width="@dimen/t15dp"
                        android:layout_height="@dimen/t15dp"
                        />
                    <TextView
                        android:textColor="@color/colorababab"
                        android:id="@+id/tv_hudong_collect_num"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="test"/>
                    <CheckBox
                        android:id="@+id/ck_hudong_praise"
                        android:button="@null"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/praise_bg"
                        android:layout_width="@dimen/t15dp"
                        android:layout_height="@dimen/t15dp"
                        />
                    <TextView
                        android:textColor="@color/colorababab"
                        android:id="@+id/tv_praise_num_head"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="test"/>

                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/ll_question_detail_share"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/share"/>
                    <TextView
                        android:textColor="@color/colorababab"
                        android:id="@+id/iv_share_hudong"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分享"/>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:paddingBottom="@dimen/t10dp"
                android:layout_marginTop="@dimen/t10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/t7dp"
                android:background="@color/colordadada"
                />
            <LinearLayout
                android:padding="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/answer_calendar"/>
                <TextView
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已回答"/>
                <TextView
                    android:id="@+id/tv_answer_num_header"
                    android:paddingLeft="10dp"
                    android:textColor="@color/main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="test"/>

               <TextView
                    android:textColor="@color/main"
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="条"/>
                <LinearLayout
                    android:paddingRight="@dimen/f10dp"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_accept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/accept_btn_bg"
                    android:padding="@dimen/f5dp"
                    android:text="采纳"
                    android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="@color/colordadada"
            />


</LinearLayout>
</LinearLayout>