<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_fases"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:paddingLeft="@dimen/f10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:id="@+id/iv_answer_item_chiefly2"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/iv_answer_item_chiefly"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/no_pic" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="@dimen/t11dp"
                android:layout_height="@dimen/t11dp"
                android:src="@drawable/master"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_answer_chiefly_name"
            style="@style/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_answer_item_chiefly2"
            android:text="孟浩然" />
        <TextView
            android:id="@+id/tv_fanses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/answer_chiefly_focus"
            android:gravity="center"
            android:padding="10dp"
            android:text="+ 关注"
            android:textColor="@color/main" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/colorababab"
        />
</LinearLayout>
