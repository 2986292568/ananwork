<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_answer_detail"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_answer_item_chiefly"
            android:layout_width="40dp"
            android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_answer_item_chiefly2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/no_pic"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="@dimen/t11dp"
                android:layout_height="@dimen/t11dp"
                android:src="@drawable/master"/>
        </RelativeLayout>
        <TextView
            android:textColor="@color/color333333"
            android:id="@+id/tv_answer_chiefly_name"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_answer_item_chiefly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="孟浩然"/>
        <TextView
            android:id="@+id/tv_accept_rate"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:layout_alignLeft="@+id/tv_answer_chiefly_name"
            android:layout_below="@+id/tv_answer_chiefly_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color333333"
            android:text="采纳率为"
            />

        //去掉答咖的点赞和收藏功能
        <LinearLayout
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_answer_item_chiefly"
            android:layout_alignBottom="@+id/iv_answer_item_chiefly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/ck_hudong_collect_num"
                android:clickable="true"
                android:button="@null"
                android:background="@drawable/praise_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/tv_answer_collect_num"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2355"/>
            <CheckBox
                android:id="@+id/ck_hudong_praise_num"
                android:button="@null"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/collect_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/tv__answer_praise_num"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5368"/>

        </LinearLayout>
        <TextView
            android:padding="10dp"
            android:background="@drawable/answer_chiefly_unfocus"
            android:id="@+id/tv_is_focus"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="数据"/>
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/colordadada"
        />


</LinearLayout>
