<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingTop="@dimen/f10dp">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_pic_nine"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_show_pics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/t20dp"
        android:text="1/9"
        android:textColor="@color/white"
        android:textSize="@dimen/t20sp" />


    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/f20dp"
        android:paddingTop="@dimen/f20dp"
        android:src="@drawable/common_titlebar_backjt" />

    <TextView
        android:id="@+id/tv_save_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/f20dp"
        android:paddingTop="@dimen/f20dp"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="20sp" />


</RelativeLayout>
