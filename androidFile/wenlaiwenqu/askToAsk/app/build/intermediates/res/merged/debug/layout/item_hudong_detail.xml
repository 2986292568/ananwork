<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_hudong_type_detail_list"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/no_pic"/>
        <TextView
            android:ellipsize="end"
            android:maxEms="9"
            android:singleLine="true"
            android:textColor="@color/black"
            android:id="@+id/tv_hudong_type_username_list"
            android:layout_marginTop="2dp"
            android:paddingLeft="9dp"
            style="@style/text_title"
            android:layout_toRightOf="@+id/iv_hudong_type_detail_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刘诗诗"/>
        <ImageView
            android:layout_marginTop="2dp"
            android:layout_alignTop="@+id/tv_hudong_type_username_list"
            android:layout_marginLeft="5dp"
            android:id="@+id/iv_hudong_detail_sex_list"
            android:layout_toRightOf="@+id/tv_hudong_type_username_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sex_men"/>
        <TextView
            android:layout_marginTop="@dimen/f2dp"
            android:id="@+id/tv_al_accept"
            android:textColor="@color/white"
            android:padding="@dimen/f3dp"
            android:background="@color/orangered"
            android:layout_toRightOf="@+id/iv_hudong_detail_sex_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已采纳"
            />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/ll_hudong_detail_lab"
            android:layout_toRightOf="@+id/iv_hudong_type_detail_list"
            android:layout_alignBottom="@+id/iv_hudong_type_detail_list"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_hudong_detail_label_school_list"
                style="@style/background_red_text_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清华大学"/>
            <TextView
                android:id="@+id/tv_hudong_detail_label_major_list"
                android:layout_marginLeft="5dp"
                style="@style/background_red_text_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工业设计"/>
            <TextView
                android:id="@+id/tv_hudong_detail_label_grade_list"
                android:layout_marginLeft="5dp"
                style="@style/background_red_text_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大二"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/f5dp"
            android:textColor="@color/colorababab"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_date_hudong_detail"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2016-09-27"
            />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_hudong_detail_content_list"
            android:padding="5dp"
            android:textSize="15sp"
            android:layout_below="@+id/ll_hudong_detail_lab"
            android:layout_alignLeft="@+id/ll_hudong_detail_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你瞅啥。。。。。。。。。"/>

    </RelativeLayout>



</LinearLayout>
