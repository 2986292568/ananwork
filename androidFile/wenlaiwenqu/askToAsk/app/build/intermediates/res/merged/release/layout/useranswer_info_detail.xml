<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_answer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="false"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">
        <CheckBox
            android:layout_marginLeft="@dimen/f4dp"
            android:button="@null"
            android:background="@drawable/ck_warn_hudongdetail_bg"
            android:id="@+id/ck_accept"
            android:layout_width="@dimen/f20dp"
            android:layout_height="@dimen/f20dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_marginLeft="@dimen/f9dp"
            android:layout_toRightOf="@+id/ck_accept"
            android:id="@+id/iv_hudong_type_detail"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/no_pic" />

        <TextView
            android:ellipsize="end"
            android:maxEms="9"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/f2dp"
            android:id="@+id/tv_hudong_type_username"
            style="@style/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/iv_hudong_type_detail"
            android:paddingLeft="9dp"
            android:text="刘诗诗" />
        <ImageView
            android:layout_marginTop="@dimen/f2dp"
            android:id="@+id/iv_hudong_detail_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_hudong_type_username"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_hudong_type_username"
            android:src="@drawable/sex_men" />
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/ll_hudong_detail_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_hudong_type_detail"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_hudong_type_detail"
            android:orientation="horizontal"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/tv_hudong_detail_label_school"
                style="@style/background_red_text_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清华大学" />
            <TextView
                android:id="@+id/tv_hudong_detail_label_major"
                style="@style/background_red_text_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="工业设计" />
            <TextView
                android:id="@+id/tv_hudong_detail_label_grade"
                style="@style/background_red_text_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="大二" />
        </LinearLayout>
        <TextView
            android:layout_marginLeft="@dimen/f8dp"
            android:id="@+id/tv_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/iv_hudong_detail_sex"
            android:background="@color/orangered"
            android:padding="3dp"
            android:text="已采纳"
            android:textColor="@color/white" />
        <TextView
            android:textColor="@color/colorababab"
            android:layout_marginTop="@dimen/f5dp"
            android:id="@+id/tv_time_hudong_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:visibility="visible"
            android:paddingRight="@dimen/f12dp"
            android:text="2016-08-08" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_hudong_detail_oncick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_title_hudong_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:paddingLeft="10dp"
            android:text="怎么和学姐搭讪"
            android:textColor="#333333" />
    </LinearLayout>


</LinearLayout>