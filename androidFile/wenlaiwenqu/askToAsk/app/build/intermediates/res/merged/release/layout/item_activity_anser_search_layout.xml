<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/rl_answer_detail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_answer_item_search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/no_pic" />

        <TextView
            android:textColor="@color/color333333"
            android:id="@+id/tv_answer_search_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_answer_item_search"
            android:text="孟浩然"
            android:textSize="14sp" />
        <TextView
            android:textColor="@color/color333333"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"
            android:layout_alignLeft="@+id/tv_answer_search_name"
           android:layout_alignBottom="@+id/iv_answer_item_search"
            android:id="@+id/tv_accept_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="采纳率为："
            />
        <TextView
            android:id="@+id/tv_is_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/answer_chiefly_focus"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/attention"
            android:textColor="@color/cccccccolor" />
    </RelativeLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="0.2dp"
    android:background="@color/colorababab"
    />


</LinearLayout>
