<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorf2f2f2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <View
        android:id="@+id/v_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/t20dp"
        android:background="@color/main"
        />
    <RelativeLayout
        android:layout_below="@+id/v_title"
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        android:padding="@dimen/t10dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/common_titlebar_backjt" />

        <TextView
            android:id="@+id/tv_leaveed_name_men"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="留言"
            android:textColor="@color/white" />
    </RelativeLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/pulv_leave_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_leave"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/t10dp"
        android:layout_marginLeft="@dimen/t10dp"
        android:layout_marginBottom="@dimen/t9dp"
        android:background="@color/main"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="给TA留言"
        />

</LinearLayout>
