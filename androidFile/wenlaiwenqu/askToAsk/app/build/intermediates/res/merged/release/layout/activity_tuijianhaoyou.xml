<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorf2f2f2"
    android:orientation="vertical">

    <include
        android:id="@+id/rel_tuijianhaoyou_title"
        layout="@layout/common_titlebar" />


    <RelativeLayout
        android:paddingBottom="@dimen/f20dp"
        android:paddingRight="@dimen/f30dp"
        android:paddingLeft="@dimen/f30dp"
        android:paddingTop="@dimen/f10dp"
        android:layout_below="@+id/rel_tuijianhaoyou_title"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_share_text"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您可以通过以下方式分享给朋友"
            />


        <LinearLayout
            android:layout_below="@+id/tv_share_text"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
            android:id="@+id/ll_tuijianhaoyou_qqhaoyou"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="@dimen/f25dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/tuiqq"
                    />
                <TextView
                    android:layout_marginTop="@dimen/f7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="腾讯QQ"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_tuijianhaoyou_weixinhaoyou"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="@dimen/f25dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/tuichat"
                    />
                <TextView
                    android:layout_marginTop="@dimen/f7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信好友"
                    />
            </LinearLayout>
            <LinearLayout
            android:id="@+id/ll_tuijianhaoyou_xinlanghaoyou"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="@dimen/f25dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/tuiweibo"
                    />
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/f7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新浪微博"
                    />
            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>

























