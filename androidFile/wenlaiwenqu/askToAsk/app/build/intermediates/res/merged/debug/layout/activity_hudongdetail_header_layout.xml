<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ll_big"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:paddingTop="@dimen/t10dp"
                    android:paddingBottom="@dimen/t10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="@dimen/t10dp"
                        android:id="@+id/iv_hudong_type_detail"
                        android:layout_width="@dimen/t70dp"
                        android:layout_height="@dimen/t70dp"
                        android:src="@drawable/no_pic"/>
                    <RelativeLayout
                        android:layout_marginLeft="@dimen/t9dp"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@+id/iv_hudong_type_detail"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/t20dp">
                        <TextView
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:id="@+id/tv_hudong_type_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="刘诗诗"/>
                        <ImageView
                            android:layout_marginLeft="@dimen/t5dp"
                            android:id="@+id/iv_hudong_detail_sex"
                            android:layout_toRightOf="@+id/tv_hudong_type_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/sex_women"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_marginLeft="@dimen/t10dp"
                        android:paddingBottom="@dimen/t10dp"
                        android:id="@+id/ll_hudong_detail_lab"
                        android:layout_toRightOf="@+id/iv_hudong_type_detail"
                        android:layout_alignBottom="@+id/iv_hudong_type_detail"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_hudong_detail_label_school"
                            style="@style/background_red_text_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="清华大学"/>
                        <TextView
                            style="@style/background_red_text_white"
                            android:id="@+id/tv_hudong_detail_label_major"
                            android:layout_marginLeft="@dimen/t5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="工业设计"/>
                        <TextView
                            android:id="@+id/tv_hudong_detail_label_grade"
                            android:layout_marginLeft="@dimen/t5dp"
                            style="@style/background_red_text_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="大二"/>
                    </LinearLayout>
                    <TextView
                        android:layout_marginRight="@dimen/t10dp"
                        android:id="@+id/tv_hudong_detail_price"
                        android:textColor="@color/main"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥0.00"/>

                <RelativeLayout
                    android:layout_toLeftOf="@+id/tv_hudong_detail_price"
                    android:layout_marginRight="@dimen/t3dp"
                    android:background="@drawable/reward"
                    android:layout_width="@dimen/t17dp"
                    android:layout_height="@dimen/t17dp">
                    <TextView
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="赏"
                        />
                </RelativeLayout>
                    <TextView
                        android:textSize="@dimen/t16sp"
                        android:textColor="@color/colorababab"
                        android:drawablePadding="@dimen/t5dp"
                        android:layout_marginTop="@dimen/f20dp"
                        android:layout_alignRight="@+id/tv_hudong_detail_price"
                        android:layout_below="@+id/tv_hudong_detail_price"
                        android:id="@+id/tv_hudong_detail_warn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/warn"
                        android:text="举报" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginLeft="@dimen/t10dp"
                    android:id="@+id/ll_hudong_detail_oncick"
                    android:layout_marginTop="@dimen/t10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:textSize="@dimen/t17sp"
                        android:id="@+id/tv_title_hudong_detail"
                        android:textColor="@color/color333333"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="问题标题"/>
                    <TextView
                        android:textColor="@color/colorababab"
                        android:id="@+id/tv_time_hudong_detail"
                        android:paddingRight="@dimen/t10dp"
                        android:gravity="center_vertical|right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016-08-08"/>
                </LinearLayout>
                <TextView
                    android:layout_marginLeft="@dimen/t10dp"
                    android:textColor="@color/color333333"
                    android:layout_marginTop="@dimen/t10dp"
                    android:id="@+id/tv_hudong_detail_desc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="问题描述"
                    />
                <com.lvshandian.asktoask.view.MyGridView
                    android:id="@+id/gv_detail_hudong"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="24px"
                    android:layout_marginLeft="24px"
                    android:layout_marginRight="24px"
                    android:layout_marginTop="24px"
                    android:horizontalSpacing="18px"
                    android:numColumns="3"
                    android:verticalSpacing="18px" />
                <RelativeLayout
                    android:gravity="center_vertical"
                    android:padding="@dimen/f10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:padding="@dimen/f30dp"
                            android:id="@+id/ck_hudong_detail_collect_num"
                            android:button="@null"
                            android:background="@drawable/collect_bg"
                            android:layout_width="@dimen/t17dp"
                            android:layout_height="@dimen/t17dp"
                            />
                        <TextView
                            android:textColor="@color/colorababab"
                            android:id="@+id/tv_hudong_detail_collect_num"
                            android:layout_marginLeft="@dimen/t10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="test"/>
                        <CheckBox
                            android:layout_marginLeft="@dimen/f40dp"
                            android:id="@+id/ck_hudong_detail_praise"
                            android:button="@null"
                            android:background="@drawable/praise_bg"
                            android:layout_width="@dimen/t17dp"
                            android:layout_height="@dimen/t17dp"
                            />
                        <TextView
                            android:textColor="@color/colorababab"
                            android:id="@+id/tv_praise_num_head"
                            android:layout_marginLeft="@dimen/t10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="test"/>

                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:id="@+id/iv_share_hudong_detail"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/share"/>
                        <TextView
                            android:textColor="@color/colorababab"
                            android:id="@+id/tv_hudong_share_detail"
                            android:layout_marginLeft="@dimen/t10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="分享"/>
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:paddingBottom="@dimen/t10dp"
                    android:layout_marginTop="@dimen/t10dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/t7dp"
                    android:background="@color/colordadada"
                    />
                <LinearLayout
                    android:padding="@dimen/t10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/answer_calendar"/>
                    <TextView
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/t10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已回答"/>
                    <TextView
                        android:id="@+id/tv_answer_num_header"
                        android:paddingLeft="@dimen/t10dp"
                        android:textColor="@color/main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="test"/>
                    <TextView
                        android:textColor="@color/main"
                        android:layout_marginLeft="@dimen/t2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="条"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/t7dp"
                android:background="@color/colordadada"
                />


                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_hudong_unselet_master"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/t20dp"
                        android:textColor="@color/color666666"
                        android:id="@+id/tv_wenzhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="问主还未选择答师哦"/>
                </RelativeLayout>



        </LinearLayout>



</LinearLayout>
