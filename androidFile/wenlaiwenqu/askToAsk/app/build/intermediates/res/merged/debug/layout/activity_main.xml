<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parent_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/d_fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/colordadada"
            />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RadioGroup
            android:id="@+id/d_rg_graoup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorf2f2f2"
            android:orientation="horizontal"
            android:paddingTop="18px">
            <RadioButton
                android:id="@+id/d_rb_interaction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawablePadding="@dimen/t2dp"
                android:drawableTop="@drawable/interaction__rb_choose"
                android:gravity="center"
                android:text="互动"
                android:textColor="@drawable/hudong_button_bg"
                 />
            <RadioButton
                android:id="@+id/d_rb_answer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="@dimen/t2dp"
                android:drawableTop="@drawable/answer_rb_choose"
                android:gravity="center"
                android:text="答咖"
                android:textColor="@drawable/hudong_button_bg"
                 />
            <FrameLayout
                android:background="@color/red"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <RadioButton
                android:id="@+id/d_rb_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="@dimen/t2dp"
                android:drawableTop="@drawable/message_rb_choose"
                android:gravity="center"
                android:text="消息"
                android:textColor="@drawable/hudong_button_bg" />

            <RadioButton
                android:id="@+id/d_rb_my"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="@dimen/t2dp"
                android:drawableTop="@drawable/my_rb_choose"
                android:gravity="center"
                android:text="我的"
                android:textColor="@drawable/hudong_button_bg" />
        </RadioGroup>
        <ImageView
            android:id="@+id/question_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_bg"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/question" />
            <TextView
                android:id="@+id/message_hot"
                android:layout_width="@dimen/f16dp"
                android:layout_height="@dimen/f16dp"
                android:background="@drawable/rc_unread_count_bg"
                android:textColor="@color/white"
                android:textSize="6sp"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:layout_marginRight="@dimen/f90dp"
                />

        </RelativeLayout>
    </FrameLayout>
    </LinearLayout>
</LinearLayout>
