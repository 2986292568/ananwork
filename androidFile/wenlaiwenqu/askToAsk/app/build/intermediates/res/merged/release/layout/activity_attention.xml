<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/t160dp"
            android:background="#000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/t34dp"
                android:background="@color/red" />

            <ImageView
                android:id="@+id/iv_detail_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/t10dp"
                android:src="@drawable/common_titlebar_backjt" />

            <ImageView
                android:id="@+id/iv_answer_detail"
                android:layout_width="@dimen/t50dp"
                android:layout_height="@dimen/t50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/t10dp"
                android:layout_marginLeft="@dimen/t10dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tv_answer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_answer_detail"
                android:layout_marginLeft="@dimen/t10dp"
                android:layout_toRightOf="@+id/iv_answer_detail"
                android:background="@color/white"
                android:text="你好" />

            <ImageView
                android:id="@+id/user_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_answer_name"
                android:layout_marginLeft="@dimen/t10dp"
                android:layout_toRightOf="@+id/tv_answer_name"
                android:src="@drawable/sex_women" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_answer_detail"
                android:layout_marginLeft="@dimen/t10dp"
                android:layout_toRightOf="@+id/iv_answer_detail"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_answer_focus_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="235"
                    android:textColor="@color/main" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/t5dp"
                    android:text="关注"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_answer_fan_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/t10dp"
                    android:text="7650"
                    android:textColor="@color/main" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/t5dp"
                    android:text="粉丝"
                    android:textColor="@color/white" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/t10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/t10dp"
                android:background="@drawable/gray_border"
                android:padding="@dimen/t6dp"
                android:text="北京传媒大学" />

            <TextView
                android:id="@+id/user_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/t10dp"
                android:background="@drawable/gray_border"
                android:padding="6dp"
                android:text="考古学" />

            <TextView
                android:id="@+id/user_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/t10dp"
                android:background="@drawable/gray_border"
                android:padding="6dp"
                android:text="大三" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/t10dp"
            android:layout_marginTop="@dimen/t10dp"
            android:background="@color/cccccccolor" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/t20dp">

                <TextView
                    android:id="@+id/tv_answer_solve_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="875"
                    android:textColor="@color/main" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/t5dp"
                    android:text="回答"
                    android:textColor="@color/main" />

                <View
                    android:layout_width="@dimen/t60dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/t5dp"
                    android:background="@color/main"
                    android:textColor="@color/main" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/t20dp">

                <TextView
                    android:id="@+id/tv_answer_ask_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="87" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/t5dp"
                    android:text="提问" />

                <View
                    android:layout_width="@dimen/t60dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/t5dp"
                    android:background="@color/gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_accept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/t20dp">

                <TextView
                    android:id="@+id/tv_answer_accept_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="57%" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="采纳率" />

                <View
                    android:layout_width="@dimen/t60dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/t5dp"
                    android:background="@color/gray" />
            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/lv_answer_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_answer_detail_leave_words"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/main"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/leave_words" />

            <TextView
                android:id="@+id/tv_leave_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="留言"
                android:textColor="@color/white" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/t1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="#963206" />

        <LinearLayout
            android:id="@+id/ll_answer_detail_focus"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/main"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add_focus" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="关注"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
