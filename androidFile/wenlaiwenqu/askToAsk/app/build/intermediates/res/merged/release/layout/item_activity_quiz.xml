<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_collectdetails"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <LinearLayout
       android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_marginLeft="@dimen/t5dp"
            android:background="@drawable/reward"
            android:layout_width="@dimen/t16dp"
            android:layout_height="@dimen/t16dp">
            <TextView
                android:textSize="@dimen/t12sp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赏"
                />
        </RelativeLayout>
        <TextView
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="15"
            android:id="@+id/tv_title_hudong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:text="怎么和学姐搭讪"
            android:textColor="#333333" />
        <TextView
            android:textColor="@color/colorababab"
            android:id="@+id/tv_time_hudong"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/t20dp"
            android:text="2016-08-08" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            style="@style/background_hudong_first_corner"
            android:id="@+id/tv_type_hudong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="干货"
            />
        <TextView
            android:id="@+id/tv_price_hudong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:text="￥268.0"
            android:textColor="@color/main" />
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colordadada"
        />
</LinearLayout>